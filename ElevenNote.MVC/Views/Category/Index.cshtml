@model IEnumerable<CategoryListItem>

@{
    ViewData["Title"] = "Category Listing";   
}

@Html.ActionLink("Create Category","Post","Category")
@if(Model.Count() >0)
{
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                 <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>
                          @Html.ActionLink("Edit","Edit","Category",new {id=category.Id}) |
                          @Html.ActionLink("Details","Details","Category",new {id=category.Id}) |
                          @Html.ActionLink("Delete","Delete","Category",new {id=category.Id}) 
                 </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-danger">Sorry, No Categories Here!</p>
}

