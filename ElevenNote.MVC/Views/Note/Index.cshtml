@model IEnumerable<NoteListItem>

@{
    ViewData["Title"] = "Note Listing";   
}

@Html.ActionLink("Create Note","Post","Note")
@if(Model.Count() >0)
{
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
            <tr>
                        <td>@note.Id</td>
                        <td>@note.Title</td>
                        <td>
                          @Html.ActionLink("Edit","Edit","Note",new {id=note.Id}) |
                          @Html.ActionLink("Details","Details","Note",new {id=note.Id}) |
                          @Html.ActionLink("Delete","Delete","Note",new {id=note.Id}) 
                 </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-danger">Sorry, No Notes Here!</p>
}

